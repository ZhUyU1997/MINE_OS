    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/kernel/system",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "gdb-multiarch",
                "preLaunchTask": "debug-linux"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "arm-linux-gnueabihf-gdb.exe",
                "preLaunchTask": "debug-windows"
            },
            "miDebuggerServerAddress": "localhost:10001",
            "targetArchitecture": "ARM",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}